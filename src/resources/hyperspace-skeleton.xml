<!-- 
    If the <ship> with the same base name exists, then we just want to toggle the slot.
    Otherwise we do want to add a new <ship>.
    This Slipstream tags code handles that all for us and only looks this way
    to ensure it works no matter the existing state of hyperspace.xml.
    Use as a single chunk and don't mix with other Slipstream tags code.
-->
<!-- start of chunk -->
<FTL xmlns:mod="mod" xmlns:mod-append="mod-append">
    <ships>
        <ship name="replace_me" a="false" b="false" c="false" super="luminal" />
        <customShip />
    </ships>
    <mod:findWithChildLike type="ships" child-type="ship" reverse="true" start="1" limit="1">
        <mod:selector name="replace_me" />
        <mod:findName type="ship" name="replace_me">
            <mod:setAttributes super="luminal" />
        </mod:findName>
    </mod:findWithChildLike>
    <mod:findWithChildLike type="ships" child-type="ship" start="1">
        <mod:selector super="luminal" />
        <mod:findLike type="ship">
            <mod:selector super="luminal" />
            <mod:removeTag />
        </mod:findLike>
    </mod:findWithChildLike>
    <mod:findLike type="ships">
        <mod:findLike type="ship">
            <mod:selector super="luminal" />
            <mod:removeAttributes super="" />
        </mod:findLike>
    </mod:findLike>
</FTL>
<!-- end of chunk -->
