<assembly>
	<id>dist-mac</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>../../skels/common</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>  <!-- Non-executables. -->
			<directory>../../skels/mac</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>**/*.command</exclude>
				<exclude>**/runme</exclude>
			</excludes>
		</fileSet>
		<fileSet>  <!-- Executables. -->
			<directory>../../skels/mac</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*.command</include>
				<include>**/runme</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/Superluminal2.app/Contents/Resources/</outputDirectory>
			<includes>
				<include>superluminal2-mac.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>